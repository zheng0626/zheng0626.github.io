extends ../partials/layoutSidebar.pug
block innerContent
  #orderDetail
    #order
      #orderHeader
        p Collection Num : #{order_trans.collectionNum}
        if order_trans.collectionTime
          p Collection: #{order_trans.collectionTime.substring(0,5)}
        else
          p Collection: Walk-In
      table
        thead
          tr
            td Product Name
            td Quantity
        for product in order_items
          tbody
            tr
              td=product.briefName
              td=product.quantity
      p Total : #{order.total}