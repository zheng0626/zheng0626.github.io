  // Processing Orders
  .details
    .recentOrders
      .cardHeader
        h2 Recent Orders
        a.btn(href='#') View All
      table
        thead
          tr
            td Order Num
            td Order Time
            td Total
            td Order Status
            td Payment Status
        tbody
          tr
            td Star Regrigerator
            td $1200
            td Paid
            td
              span.status.delivered Delivered
            td hi
        each order in WO
          tbody 
            tr 
              td=order.collectionNum
              td=order.createdAt
              td=order.total
              if (order.status == '0')
                td Send In
              else if(order.status == '1')
                td Processing
              if (order.paymentStatus == '0')
                td Unpaid
              else if(order.paymentStatus == '1')
                td Paid
