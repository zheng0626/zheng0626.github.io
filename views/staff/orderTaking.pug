doctype html
head
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title order
  link(rel='stylesheet' type='text/css' href='/stylesheets/order.css')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
  script(src="/js/order.js")
#timeSelectionWindow
  #timeSelection
    #showTime
      span 00:00
    #timeCollection
      input.timepicker(id='timepicker', name='timepicker')
      button 12:30
  #timeSelectionBtn
    a.cancelBtn(href='takeOrder/checkout')  
      | return
    a.proceedBtn(href="takeOrder/cancelOrder")
      | proceed    

  
.container
  .orderUI
    // ALL THE ORDER INFO
    .orderDetails
      .itemsList
        h3 Order No: 
        table
          each product in products_in_order
            tr
              td=product.qty
              td=product.name 
              td=product.price
      .balance
        table
          tr
            td Product Total:
            td=total_price
          tr
            td &ensp;Auto Bag Charge
            td 0.10
          tr
            td Balance:
            td=total_price
        .btnAction
          a.orderBtn(href='takeOrder/checkout')
            | checkout
          a.cancelBtn(href="takeOrder/cancelOrder")
            | cancel
    // ALL THE PRODUCT BUTTON
    .productList
      #category_collection.catList.active
        //
          <a href="#" class="btnCategory">
          asdas
          </a>
        each category in categories 
          //- -var target = '#' + category.categoryName
          //- - target = target.replace(/\s/g, '')
          - var target = '#CatId' + category.id  
          button(data-tab-target=target)
            p=category.name
      each category in categories
        //- - var target = category.categoryName
        //- - target = target.replace(/\s/g, '')
        - var target = 'CatId' + category.id 
        div(id=target,data-tab-content='').proList
          each product in products 
            if product.category_id == category.id
              a(href="takeOrder/add-to-cart/"+product.id)
                button
                  p=product.name
          button#returnBtn
            p return
      
    .footer
      a(href='#')
        button
          p Take Away
      a(href='#')
        button
          p Restaurant
      a(href='./home')
        button
          p Main Menu

