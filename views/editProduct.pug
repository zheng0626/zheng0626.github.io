doctype html
head
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Sidebar
  link(rel='stylesheet', type='text/css', href='/stylesheets/sidebar.css')
.container
  .navigation
    ul
      li
        a(href='#')
          span.icon
            ion-icon(name='fast-food-outline')
          span.title Bamboo House
      li
        a(href='#')
          span.icon
            ion-icon(name='home-outline')
          span.title Dashboard
      li
        a(href='#')
          span.icon
            ion-icon(name='person-circle-outline')
          span.title Staff
      li
        a(href='#')
          span.icon
            ion-icon(name='fast-food-outline')
          span.title Foods
      li
        a(href='#')
          span.icon
            ion-icon(name='fast-food-outline')
          span.title Logout
  // main
  .main
    .topbar
      .toggle
        ion-icon(name='menu-outline')
    // Form
    .productForm
      form(action='/addfood', method='post')
        p
          label Enter name: 
          input#title(type='text', name='title_field', value=product[0].name)
        p
          label
            | Enter Category: 
            select#category(name='category_field',value=product[0].category_id)
              each category in categories
                option(value=category.id)=category.categoryName
        p
          label Enter Price: 
          input#price(type='text', name='price_field',value=product[0].price)
        p
          label Enter Preparation Time:
          input#prepTime(type='text', name='prepTime_field')
        p
          label Enter Description: 
          input#description(type='text', name='desc_field')
        input(type='submit' value='OK')
script(type='module', src='https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js')
script(nomodule='', src='https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js')
script.
  //menu toggle
  let toggle = document.querySelector('.toggle');
  let navigation = document.querySelector('.navigation');
  let main = document.querySelector('.main')
  toggle.onclick = function(){
  navigation.classList.toggle('active');
  main.classList.toggle('active');
  }
  //add hovered
  let list = document.querySelectorAll('.navigation li');
  function activeLink(){
  list.forEach((item) =>
  item.classList.remove('hovered'));
  this.classList.add('hovered');
  }
  list.forEach((item)=>
  item.addEventListener('mouseover',activeLink));
